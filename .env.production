# üîê Claude Code Desktop - Production Environment Configuration
# Secure production environment variables

# Application Configuration
NODE_ENV=production
VITE_ENVIRONMENT=production
VITE_VERSION=1.0.0
VITE_BUILD_DATE=2024-07-27

# API Configuration
VITE_API_BASE_URL=https://api.claude-code-desktop.dev
VITE_WS_URL=wss://api.claude-code-desktop.dev
VITE_API_TIMEOUT=30000

# Security Configuration
VITE_CSP_REPORT_URI=https://csp.claude-code-desktop.dev/report
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id
VITE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_VOICE_COMMANDS=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_REAL_TIME_METRICS=true
VITE_ENABLE_SECURITY_SCANNING=true

# Performance Configuration
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_WEB_VITALS=true
VITE_MEMORY_WARNING_THRESHOLD=0.8
VITE_CPU_WARNING_THRESHOLD=0.9

# Security Headers
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_FRAME_OPTIONS=true

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=60000

# Monitoring & Logging
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_TRACKING=true
VITE_ENABLE_USER_TRACKING=true

# CDN Configuration
VITE_CDN_URL=https://cdn.claude-code-desktop.dev
VITE_ASSETS_URL=https://assets.claude-code-desktop.dev

# Database Configuration
VITE_DATABASE_URL=postgresql://user:pass@db.claude-code-desktop.dev:5432/claude_code
VITE_REDIS_URL=redis://redis.claude-code-desktop.dev:6379

# Authentication
VITE_AUTH_DOMAIN=claude-code-desktop.auth0.com
VITE_AUTH_CLIENT_ID=your-auth0-client-id
VITE_AUTH_AUDIENCE=https://api.claude-code-desktop.dev

# WebRTC Configuration
VITE_WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
VITE_WEBRTC_TURN_SERVER=turn:turn.claude-code-desktop.dev:3478
VITE_WEBRTC_TURN_USERNAME=webrtc-user
VITE_WEBRTC_TURN_PASSWORD=webrtc-password

# File Upload Configuration
VITE_MAX_FILE_SIZE=100MB
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,txt,md,json,yml,yaml
VITE_UPLOAD_TIMEOUT=300000

# Voice Commands Configuration
VITE_VOICE_COMMANDS_LANGUAGE=en-US
VITE_VOICE_COMMANDS_CONFIDENCE_THRESHOLD=0.8
VITE_VOICE_COMMANDS_TIMEOUT=5000

# Collaboration Configuration
VITE_COLLABORATION_ROOM_LIMIT=100
VITE_COLLABORATION_USER_LIMIT=50
VITE_COLLABORATION_MESSAGE_LIMIT=1000

# Security Configuration
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_ENABLE_SQL_INJECTION_PROTECTION=true
VITE_ENABLE_CLICKJACKING_PROTECTION=true

# Monitoring Configuration
VITE_PROMETHEUS_ENABLED=true
VITE_GRAFANA_ENABLED=true
VITE_ALERTING_ENABLED=true

# Backup Configuration
VITE_BACKUP_ENABLED=true
VITE_BACKUP_SCHEDULE=0 2 * * *
VITE_BACKUP_RETENTION_DAYS=30

# Cache Configuration
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600
VITE_CACHE_MAX_SIZE=100MB

# Logging Configuration
VITE_LOG_LEVEL=info
VITE_LOG_FORMAT=json
VITE_LOG_ROTATION_ENABLED=true
VITE_LOG_RETENTION_DAYS=7
